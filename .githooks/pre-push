#!/bin/sh

# Git pre-push hook to auto-increment version
# This hook runs before pushing to GitHub and increments the version by 0.001

echo "ğŸš€ Running pre-push hook..."

# Get the current branch
branch=$(git rev-parse --abbrev-ref HEAD)

# Only increment version for main branch pushes
if [ "$branch" = "main" ]; then
    echo "ğŸ“ˆ Incrementing version for main branch push..."
    
    # Run the version increment script
    node scripts/increment-version.js
    
    # Check if version was updated
    if [ $? -eq 0 ]; then
        echo "âœ… Version incremented successfully"
        
        # Add the updated version file to the current commit
        git add lib/version.ts
        
        # Amend the current commit to include version update
        git commit --amend --no-edit --no-verify
        
        echo "ğŸ”„ Version file added to commit"
    else
        echo "âŒ Failed to increment version"
        exit 1
    fi
else
    echo "â­ï¸  Skipping version increment for branch: $branch"
fi

echo "âœ… Pre-push hook completed"